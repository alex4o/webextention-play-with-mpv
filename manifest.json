{

	"applications": {
		"gecko": {
			"id": "mpv@opener.org",
			"strict_min_version": "55.0"
		}
	},
	"description": "Finds video src's and sends them to mpv",
	"manifest_version": 2,
	"name": "play-mpv",
	"version": "1.0",
	"homepage_url": "https://github.com/alex4o/play-mpv",

	"background": {
		"scripts": ["background.js"]
	},

	"browser_action": {
		"default_icon": "icon/icon.svg",
		"browser_style": true,
			"default_popup": "popup/index.html"
	},

	"content_scripts": [	
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["content.js"]
		}
	],

	"content_security_policy": "default-src *; script-src 'self' 'unsafe-eval'; style-src 'self' 'unsafe-inline';object-src 'self'",
	
	"permissions": [
		"menus",
		"activeTab",
		"tabs",
		"nativeMessaging"
	]

}
